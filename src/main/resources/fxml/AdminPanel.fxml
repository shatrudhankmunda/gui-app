<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.gui.app.controller.AdminController" spacing="10" alignment="CENTER">
    <Label text="User Management Panel" style="-fx-font-size: 18px;" />
    <TableView fx:id="userTable" prefWidth="400">
        <columns>
            <TableColumn fx:id="usernameColumn" text="Username" />
            <TableColumn fx:id="roleColumn" text="Role" />
        </columns>
    </TableView>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Promote to Admin" onAction="#handlePromote" />
        <Button text="Demote to Standard" onAction="#handleDemote" />
        <Button text="Delete User" onAction="#handleDelete" />
    </HBox>
</VBox>

