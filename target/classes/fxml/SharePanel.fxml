<VBox prefHeight="249.0" prefWidth="469.0" spacing="10" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gui.app.controller.SharePanelController">
    <Label text="Share File:">
      <opaqueInsets>
         <Insets top="15.0" />
      </opaqueInsets></Label>
    <TextField fx:id="fileField" promptText="Filename" />
    
    <HBox spacing="10">
                    <TextField fx:id="sharedUserField" promptText="User to share with..." />
                    <CheckBox fx:id="readCheck" text="Read" />
                    <CheckBox fx:id="writeCheck" text="Write" />
                    <Button onAction="#handleGrant" text="Grant Access" />
                    <Button onAction="#handleRefresh" text="Refresh ACL" />
    </HBox>
</VBox>
