<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.gui.app.controller.FileController">
    <VBox spacing="15">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15" />
        </padding>

        <Label text="File Management Panel" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

        <HBox spacing="20">
            <!-- File List -->
            <VBox spacing="10" prefWidth="250">
                <Label text="Available Files" />
                <ListView fx:id="fileListView" prefHeight="250" />
                <Button onAction="#handleRefreshFileList" text="Refresh File List" />
            </VBox>

            <!-- File Editor & Permissions -->
            <VBox spacing="15" HBox.hgrow="ALWAYS">
                <Label text="Selected File Name" />
                <TextField fx:id="fileNameField" promptText="Enter filename..." />

                <Label text="File Content" />
                <TextArea fx:id="fileContentArea" prefHeight="200" wrapText="true" VBox.vgrow="ALWAYS" />

                <HBox spacing="10">
                    <Button onAction="#handleCreateFile" text="Create" />
                    <Button onAction="#handleUpdateFile" text="Update" />
                    <Button onAction="#handleDeleteFile" text="Delete" />
                    <Button onAction="#handleDownloadFile" text="Download" />
                </HBox>

                <Separator />

                <!-- ACL Management -->
                <Label text="Manage Access (ACL)" style="-fx-font-size: 14px; -fx-font-weight: bold;" />

                <TableView fx:id="aclTable" prefHeight="180">
                    <columns>
                        <TableColumn fx:id="userCol" text="User" />
                        <TableColumn fx:id="readCol" text="Read" />
                        <TableColumn fx:id="writeCol" text="Write" />
                        <TableColumn fx:id="actionCol" text="Action" />
                    </columns>
                </TableView>

                <HBox spacing="10">
                    <TextField fx:id="sharedUserField" promptText="User to share with..." />
                    <CheckBox fx:id="readCheck" text="Read" />
                    <CheckBox fx:id="writeCheck" text="Write" />
                    <Button text="Grant Access" onAction="#handleGrant" />
                    <Button text="Refresh ACL" onAction="#handleRefresh" />
                </HBox>
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
