<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/24.0.1" fx:controller="com.gui.app.controller.FileEditorController">
    <VBox spacing="10">
    <Label text="File Name:" />
    <TextField fx:id="fileNameField" alignment="CENTER"></TextField>
    <Label text="Content:" />
    <TextArea fx:id="fileContentArea" prefHeight="200"></TextArea>
    <Button fx:id="saveButton" onAction="#handleSave" prefHeight="26.0" prefWidth="72.0" text="Save" />
</VBox>
</AnchorPane>
